#! /usr/bin/env python
# encoding: utf-8

from waflib import Context

VERSION = Context.g_module.VERSION

extra_linkflags = []
extra_cxxflags = []
CXX = bld.env.get_flat("CXX")
# Matches MSVC
if 'CL.exe' in CXX or 'cl.exe' in CXX:
    extra_linkflags = ['/EXPORT:initkodo']
    extra_cxxflags = ['/bigobj']

bld(
    features='cxx cxxshlib pyext',
    source=bld.path.ant_glob('**/*.cpp'),
    target='kodo',
    name='kodo-python',
    cxxflags=extra_cxxflags,
    linkflags=extra_linkflags,
    defines=['STEINWURF_KODO_PYTHON_VERSION="{}"'.format(VERSION)],
    use=[
        'boost_filesystem',
        'boost_includes',
        'boost_python',
        'boost_system',
        'fifi_includes',
        'kodo_includes',
        'sak_includes',
        'recycle_includes',
    ]
)
